<!--COVER-->
<header id="coimbra_cover" class="cover-background">
	<div class="container-fluid transparent-layer">
		<div class="row">
			<div class="header-text">
				<h1><%= t('tours.t1') %></h1>
                <hr class="orange">
				<h3><%= t('coimbra.intro') %></h3>
			</div>
		</div>
	</div>
</header>

