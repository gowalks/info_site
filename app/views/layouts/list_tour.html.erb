<!--COVER-->
<header id=<%= id[:cover]%> class="cover-background">
    <div class="container-fluid transparent-layer">
        <div class="row breakwords special-text-size">
            <div class="header-text">
                <h1> 
                    <% if I18n.locale == :en %>
                        <%= cover_en[:title] %> 
                    <% else %>
                        <%= cover_pt[:title]%>
                    <% end %>
                </h1>
                <hr class="orange">
                <h2> 
                    <% if I18n.locale == :en %>
                        <%= cover_en[:subtitle] %> 
                    <% else %>
                        <%= cover_pt[:subtitle]%>
                    <% end %>
                </h2>
            </div>
        </div>
        <div class="row arrow">
            <a class="page-scroll" href=#<%= id[:info]%> data-turbolinks="false">
                <h3><i class="fa fa-angle-down fa-5x"></i></h3>
            </a></li>
        </div>
    </div>
</header>

<section id=<%= id[:info]%> class="tour-info">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">  

                <h5 class="text-center bold"> 
                    <%= t('details.title') %>
                </h5>

                <hr class="orange">

                <!--DESCRIPTION-->
                <div class="tour-description">
                    <% if I18n.locale == :en %>
                        <% text_en[:more].each do |text| %>
                            <p><%= text %></p>
                        <% end %>
                    <% else %>
                        <% text_pt[:more].each do |text| %>
                            <p><%= text %></p>
                        <% end %>
                    <% end %>
                    
                    <button type="button" class="btn btn-link" onclick="readLessFunction()">
                        <b class="orange-color"><%= t('details.readless') %> <i class="fa fa-caret-up" aria-hidden="true"></i></b>
                    </button>
                </div>
                <div class="tour-description-lead">
                    <% if I18n.locale == :en %>
                        <p><%= text_en[:intro] %> 
                    <% else %>
                        <p><%= text_pt[:intro] %> 
                    <% end %>

                    <button type="button" class="btn btn-link" onclick="readMoreFunction()">
                        <b class="orange-color"><%= t('details.readplus') %> <i class="fa fa-caret-down" aria-hidden="true"></i></b>
                    </button>
                </p>
                </div>
                <br> 

                <!--POI-->
                <% if !poi.blank? %>

                    <h4 class="orange-color uppercaseText"><b><%= t('details.poi') %></b></h4>
                        
                    <% if I18n.locale == :en %>
                        <p>
                            <% poi[:list_en].each do |poi_desc| %>
                                <%= poi_desc %> 
                                <% if poi_desc != poi[:list_en].last %>
                                    <b class="orange-color"> – </b>
                                <%end%>    
                            <%end%>
                        </p>
                    <% else %>
                        <p>
                            <% poi[:list_pt].each do |poi_desc| %>
                                <%= poi_desc %> 
                                <% if poi_desc != poi[:list_pt].last %>
                                    <b class="orange-color"> – </b>
                                <%end%>    
                            <%end%>
                        </p>
                    <% end %>

                <%end%>

                <% if !poi2.blank? %>

                    <div id="poi2">
                        <p class="orange-color"><b>
                            <% if I18n.locale == :en %>
                                <%= poi2[:title_en] %>
                            <% else %>
                                <%= poi2[:title_pt] %>
                            <% end %>
                        </b></p>
                            
                        <% if I18n.locale == :en %>
                            <p>
                                <% poi2[:list_en].each do |poi_desc| %>
                                    <%= poi_desc %> 
                                    <% if poi_desc != poi2[:list_en].last %>
                                        <b class="orange-color"> – </b>
                                    <%end%>    
                                <%end%>
                            </p>
                        <% else %>
                            <p>
                                <% poi2[:list_pt].each do |poi_desc| %>
                                    <%= poi_desc %> 
                                    <% if poi_desc != poi2[:list_pt].last %>
                                        <b class="orange-color"> – </b>
                                    <%end%>    
                                <%end%>
                            </p>
                        <% end %>

                    </div>

                <%end%>

                <div id="tour-icon" class="text-center">
                    <img src="/images/icon.png" class="inline-block" width="50px" height="50px" class="img-responsive" alt="">
                </div>

            </div>
        </div>
    </div>
</section>

<section class="no-padding">
    <div class="container-fluid">
        <div class="row no-gutter popup-gallery">

            <% fotos.each do |foto| %>
                <div class="col-sm-4 tour-foto">
                    <img src=<%= foto %> class="img-responsive" alt="">
                </div>
            <% end %>

        </div>
    </div>
</section>

<!--OPTIONAL INFORMATION-->
<% if !optional.blank? %>
    <section class="tour-optional lighterBG">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">  

                    <h4 class="orange-color uppercaseText"><b><%= t('details.opt') %></b></h4>

                    <div class="optional-info">
                        <% if I18n.locale == :en %>
                            <% optional[:optional_en].each do |text| %>
                                <p><%= text %></p>
                            <%end%>
                        <% else %>
                            <% optional[:optional_pt].each do |text| %>
                                <p><%= text %></p>
                            <%end%>
                        <% end %>
                        
                        <button type="button" class="btn btn-link" onclick="readLessFunction2()">
                            <b class="orange-color"><%= t('details.infoless') %> <i class="fa fa-caret-up" aria-hidden="true"></i></b>
                        </button>
                    </div>
                    <div class="optional-info-lead">
                        <% if I18n.locale == :en %>
                            <p><%= optional[:lead_en] %> 
                        <% else %>
                            <p><%= optional[:lead_pt] %> 
                        <% end %>

                        <% if optional[:optional_pt].size > 0 %>
                            <button type="button" class="btn btn-link" onclick="readMoreFunction2()">
                                <b class="orange-color"><%= t('details.infoplus') %> <i class="fa fa-caret-down" aria-hidden="true"></i></b>
                            </button>
                        <% end %>
                    </p>
                    </div>
                    <br>  

                </div>
            </div>
        </div>
    </section>
<% end %>

<section id=<%= id[:details]%> class="tour-details">
    <div class="container-fluid">

        <h5 class="text-center bold">
            <%= t('details.details') %>
        </h5>
        <hr class="orange">

        <div class="row text-center">
            <div class="col-sm-4">
                <p><i class="fa fa-clock-o fa-3x" aria-hidden="true"></i></p>
                <h4><b><%= t('details.schedule') %></b></h4>
                <p><small>
                    <% if I18n.locale == :en %>
                        <%= data_en[:reservation] %></br> 
                        <%= data_en[:time] %></br> 
                    <% else %>
                        <%= data_pt[:reservation]%></br>
                        <%= data_pt[:time] %></br> 
                    <% end %>
                </small></p>       
            </div>
            <div class="col-sm-4">
                <p><i class="fa fa-eur fa-3x" aria-hidden="true"></i></p>
                <h4><b><%= t('details.price') %></b></h4> 
                <p><small>
                    <% if I18n.locale == :en %>
                        <%= data_en[:cost] %></br> 
                    <% else %>
                        <%= data_pt[:cost] %></br> 
                    <% end %>
                </small></p>
            </div>
            <div class="col-sm-4">
                <p><i class="fa fa-map-marker fa-3x" aria-hidden="true"></i></p>
                <h4><b><%= t('details.meeting') %></b></h4> 
                <p><small>
                    <% if I18n.locale == :en %>
                        <%= data_en[:meeting_point] %></br> 
                    <% else %>
                        <%= data_pt[:meeting_point] %></br> 
                    <% end %>
                </small></p>
            </div>
        </div>
    </div>
</section>

<!-- Back to menu -->
<span id="back-to-menu-button" class="position-button hidden">
    <% if controller_name == "coimbra" %>
        <%= link_to fa_icon("th 2x"), url_for(tour_coimbra_path(anchor: "coimbra_page_information", locale: I18n.locale)), class: "btn", id: "backToMenuBtn"%>
    <% else %>
        <%= link_to fa_icon("th 2x"), url_for(tour_around_path(anchor: "around_page_information", locale: I18n.locale)), class: "btn", id: "backToMenuBtn"%>
    <% end %>
</span><!-- /top-link-block -->

<script type="text/javascript">
    function readMoreFunction() {
        var x = document.getElementsByClassName("tour-description-lead")[0];
        x.style.display = 'none';

        var y = document.getElementsByClassName("tour-description")[0];
        y.style.display = 'block';
    }
    function readLessFunction() {
        var x = document.getElementsByClassName("tour-description-lead")[0];
        x.style.display = 'block';

        var y = document.getElementsByClassName("tour-description")[0];
        y.style.display = 'none';
    }

    function readMoreFunction2() {
        var x = document.getElementsByClassName("optional-info-lead")[0];
        x.style.display = 'none';

        var y = document.getElementsByClassName("optional-info")[0];
        y.style.display = 'block';
    }
    function readLessFunction2() {
        var x = document.getElementsByClassName("optional-info-lead")[0];
        x.style.display = 'block';

        var y = document.getElementsByClassName("optional-info")[0];
        y.style.display = 'none';
    }

    //back to menu button
    // Only enable if the document has a long scroll bar
    // Note the window height + offset
    if ( ($(window).height() + 100) < $(document).height() ) {
        $('#back-to-menu-button').removeClass('hidden').affix({
            // how far to scroll down before link "slides" into view
            offset: {top:100}
        });
    }

</script>