    <div class="container-fluid cover-tour transparent-layer">
        <div class="row cover-text">
            <div>
                <h2><%= t('tours.t1') %></h2>
                <hr class="orange">
                <h3><%= t('index.coimbra') %></h3>
                <%= link_to t('index.button'), url_for(tour_coimbra_path(locale: I18n.locale)), class: "btn btn-lg btn-customize"%>
            </div>
        </div>
        <div class="row arrow">
            <a class="page-scroll" href="#around-coimbra-tour" data-turbolinks="false">
                <h3><i class="fa fa-angle-down fa-5x"></i></h3>
            </a></li>
        </div>
    </div>
</section>
