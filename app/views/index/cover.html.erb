<!--COVER-->
<header id="cover" class="cover-background">
	<div class="container-fluid">
		<div class="row">
			<div class="header-text">
				<h1 id="homeHeading">
					<%= t('index.hello') %>
				</h1>
                <hr class="orange">
				<h3><%= t('index.intro') %></h3>
			</div>
		</div>
        <div class="row arrow">
            <a class="page-scroll" href="#about" data-turbolinks="false">
                <h3><i class="fa fa-angle-down fa-5x"></i></h3>
            </a>
        </div>
	</div>
</header>

<section id="about">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 text-center">
				<img src="\images\logo\gowalks_logo_mini.png" class="img-responsive center-block" alt="GOwalks logo" width="50%">
                <hr class="orange">
				<h3><%= t('index.gowalks') %></h3>

                <div id="about-links">
                    <div class="row hidden">
                        <div class="col-sm-4">
                            <%= link_to t('general.team'), url_for(general_team_path(locale: I18n.locale)), class: "btn btn-lg btn-customize-inverse"%>
                        </div>
                        <div class="col-sm-4">
                            <%= link_to t('general.partners'), url_for(general_partners_path(locale: I18n.locale)), class: "btn btn-lg btn-customize-inverse"%>
                        </div>
                        <div class="col-sm-4">
                            <%= link_to t('general.faq'), url_for(general_faq_path(locale: I18n.locale)), class: "btn btn-lg btn-customize-inverse"%>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <a class="btn-link" href="/general/team">
                                <p><i class="fa fa-users fa-3x orange-color" aria-hidden="true"></i></p>
                                <p><%= t('general.team') %></p>
                            </a>
                        </div>
                        <div class="col-sm-4">
                            <a class="btn-link" href="/general/partners">
                                <p><i class="fa fa-link fa-3x orange-color" aria-hidden="true"></i></p>
                                <p><%= t('general.partners') %></p>
                            </a>
                        </div>
                        <div class="col-sm-4">
                            <a class="btn-link" href="/general/faq">
                                <p><i class="fa fa-question-circle fa-3x orange-color" aria-hidden="true"></i></p>
                                <p><%= t('general.faq') %></p>
                            </a>
                        </div>
                    </div>
                </div>

                <a class="page-scroll" href="#coimbra-tour" data-turbolinks="false">
                    <h3><i class="fa fa-angle-down fa-5x"></i></h3>
                </a></li>
			</div>
		</div>
	</div>
</section>

