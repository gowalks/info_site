        <div class="row cover-text">
            <div>
                <h2><%= t('tours.t2') %></h2>
                <hr class="orange">
                <h3><%= t('index.around') %></h3>
                <%= link_to t('index.button'), url_for(tour_around_path(locale: I18n.locale)), class: "btn btn-lg btn-customize"%>
            </div>
        </div>
        <div class="row arrow">
            <a class="page-scroll" href="#tailored-tour" data-turbolinks="false">
